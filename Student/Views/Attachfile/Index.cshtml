@model Student.Models.MailInfo
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<h2>Send email with attachment</h2>

<form action="/Attachfile/SendMail" method="post" enctype="multipart/form-data">
    <!-- Thêm enctype="multipart/form-data" -->
    <div class="mb-3 ">
        <label for="staticEmail" class="col-sm-2 col-form-label"> From: </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="From">
        </div>
    </div>

    <div class="mb-3 ">
        <label for="staticEmail" class="col-sm-2 col-form-label">To:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="To">
        </div>
    </div>

    <div class="mb-3 ">
        <label for="staticEmail" class="col-sm-2 col-form-label">Subject:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="Subject">
        </div>
    </div>

    <div class="mb-3">
        <label for="formFile" class="form-label">Attachment</label>
        <input class="form-control" type="file" name="AttachmentFile" />
    </div>

    <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Notes</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="Body"></textarea>
    </div>

    <div class="btn-group" style="justify-content:space-around">
        <button type="submit" class="btn btn-outline-primary">Send</button>
    </div>

</form>