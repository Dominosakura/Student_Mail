@model Student.Models.Students

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nhập Thông Tin Học Viên</h2>

@using (Html.BeginForm("Save", "Student", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken() 

    <div class="form-horizontal">
        <h4>Thông Tin Học Viên</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Mã Học Viên -->
        <div class="form-group">
            @Html.LabelFor(model => model.MaHocVien, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaHocVien, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaHocVien, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Họ và Tên -->
        <div class="form-group">
            @Html.LabelFor(model => model.HovaTen, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HovaTen, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HovaTen, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Giới Tính -->
        <div class="form-group">
            @Html.LabelFor(model => model.GioiTinh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label> @Html.RadioButtonFor(model => model.GioiTinh, "Male") Nam</label>
                <label> @Html.RadioButtonFor(model => model.GioiTinh, "Female") Nữ</label>
                @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Ngày Sinh -->
        <div class="form-group">
            @Html.LabelFor(model => model.NgaySinh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.NgaySinh, new { @class = "form-control", @type = "date" })
                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Học Phí -->
        <div class="form-group">
            @Html.LabelFor(model => model.HocPhi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HocPhi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HocPhi, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Hình Ảnh -->
        <div class="form-group">
            @Html.LabelFor(model => model.ImagePath, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ImagePath, new { @class = "form-control", @type = "file" })
                @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Ghi Chú -->
        <div class="form-group">
            @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
            </div>
        </div>
        <p>
            <!-- Nút Gửi -->
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-outline-success">Hiển thị danh sách</button>
                </div>
            </div>
        </p>
    </div>
}

